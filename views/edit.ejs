<%- include('./partials/header.ejs') %>

<div style="height: 6rem; width: 100%; background: none;"></div>


<div class="row">
    <div class="col-6 m-auto">
        <h1>Edit form for <%= job.name %></h1>
        <form action="/jobs/<%= job._id %>?_method=PATCH" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Company Name</label>
                <input value="<%= job.name %>" type="text" class="form-control" id="name" name="name">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Company Location</label>
                <input value="<%= job.address %>" type="text" class="form-control" id="address" name="address">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Company Logo</label>
                <input value="<%= job.image %>" type="text" class="form-control" id="image" name="image">
            </div>

            <div class="mb-3">
                <label for="type" class="form-label">Job Type</label>
                <select name="type" id="type" class="form-control">
                    <option value="Full-Time" <% if (job.type === 'Full-Time') { %>selected<% } %>>Full-Time</option>
                    <option value="Part-Time" <% if (job.type === 'Part-Time') { %>selected<% } %>>Part-Time</option>
                    <option value="Temporary" <% if (job.type === 'Temporary') { %>selected<% } %>>Temporary</option>
                    <option value="Seasonal" <% if (job.type === 'Seasonal') { %>selected<% } %>>Seasonal</option>
                </select>
            </div>
            

            <div class="mb-3">
                <label for="category" class="form-label">Job Category</label>
                <select name="category" id="category" class="form-control">
                    <option value="Marketing" <% if (job.category=== 'Marketing') { %> selected <% } %>>Marketing</option>
                    <option value="Software Engineer" <% if (job.category=== 'Software Engineer') { %> selected <% } %>>Software Engineer</option>
                    <option value="Program Developer" <% if (job.category=== 'Program Developer') { %> selected <% } %>>Program Developer</option>
                    <option value="Project Management" <% if (job.category=== 'Project Management') { %> selected <% } %>>Project Management</option>
                    <option value="Business Development" <% if (job.category=== 'Business Development') { %> selected <% } %>>Business Development</option>
                    <option value="Sales and Communication" <% if (job.category=== 'Sales and Communication') { %> selected <% } %>>Sales and Communication</option>
                    <option value="Teaching and Education" <% if (job.category=== 'Teaching and Education') { %> selected <% } %>>Teaching and Education</option>
                    <option value="Design and Creative" <% if (job.category=== 'Design and Creative') { %> selected <% } %>>Design and Creative</option>
                </select>
            </div>
            
            

            <div class="mb-3">
                <label for="package" class="form-label">Job Stipend</label>
                <input value="<%= job.package %>" type="text" class="form-control" id="package" name="package">
            </div>
            <div class="mb-3">
                <label for="cgpa" class="form-label">Min CGPA Required</label>
                <input value="<%= job.cgpa %>" type="number" class="form-control" id="cgpa" name="cgpa" min="0" max="10" step="0.01">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Job Description</label>
                <input value="<%= job.description %>" type="text" class="form-control" id="description" name="description"></input>
            </div>

            <div class="mb-3">
                <label for="responsibilities" class="form-label">Responsibilities</label>
                <input value="<%= job.responsibilities %>" type="text" class="form-control" id="responsibilities" name="responsibilities"></input>
            </div>

            <div class="mb-3">
                <label for="requirements" class="form-label">Minimum Requirements</label>
                <input value="<%= job.requirements %>" type="text" class="form-control" id="requirements" name="requirements"></input>
            </div>

            <div class="mb-3">
                <label for="deadline" class="form-label">Application deadline</label>
                <input value="<%= job.deadline %>" type="date" class="form-control" id="deadline" name="deadline">
            </div>

            <div class="mb-3">
                <label for="experience" class="form-label">Experience</label>
                <select name="experience" id="experience" class="form-control">
                  <option value="Entry Level" <% if (job.experience === 'Entry Level') { %>selected<% } %>>Entry Level</option>
                  <option value="Mid Level" <% if (job.experience === 'Mid Level') { %>selected<% } %>>Mid Level</option>
                  <option value="Mid-Senior Level" <% if (job.experience === 'Mid-Senior Level') { %>selected<% } %>>Mid-Senior Level</option>
                  <option value="Top Level" <% if (job.experience === 'Top Level') { %>selected<% } %>>Top Level</option>
                </select>
              </div>
              
            

            <div class="mb-3">
                <label for="companySize" class="form-label">Company Size</label>
                <input value="<%= job.companySize %>" type="text" class="form-control" id="companySize" name="companySize">
            </div>

            <div class="mb-3">
                <label for="companyPhone" class="form-label">Company Phone</label>
                <input value="<%= job.companyPhone %>" type="text" class="form-control" id="companyPhone" name="companyPhone">
            </div>
            
            <div class="mb-3">
                <label for="companyEmail" class="form-label">Company Email</label>
                <input value="<%= job.companyEmail %>" type="text" class="form-control" id="companyEmail" name="companyEmail">
            </div>

            <div class="mb-3">
                <label for="companyWebsite" class="form-label">Company Website</label>
                <input value="<%= job.companyWebsite %>" type="text" class="form-control" id="companyWebsite" name="companyWebsite">
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Add a new job">
            </div>
        </form>
    </div>
</div>

<script>
    const myNav = document.querySelector(".my-navbar");
    myNav.classList.add("scrolled");
</script>

<%- include('./partials/footer.ejs') %>